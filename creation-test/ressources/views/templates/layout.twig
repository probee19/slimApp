<body style="margin-top:60px">
{% include 'templates/partials/menu.twig' %}
<!-- Page Content -->
<div class="container">
  <div class="row ">

         <!-- Menu -->
         <div class="col-sm-2 nopadding" >
                 <div class="nav-side-menu nopadding">
                     <!--i class="fa fa-bars fa-2x toggle-btn" data-toggle="collapse" data-target="#menu-content"></i-->
                     <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#menu-content">
                       <span class="icon-bar"></span>
                       <span class="icon-bar"></span>
                       <span class="icon-bar"></span>
                     </button>
                     <div class="menu-list">

                         <ul id="menu-content" class="menu-content collapse out">
                             <li class="active" onclick="showHome($(this));" id="btn_for_global_stats">
                               <a > Accueil </a>
                             </li>
                             <li onclick="showForTests($(this));" id="btn_for_tests_stats">
                               <a > Tests </a>
                             </li>
                             <li onclick="showForContries($(this));" id="btn_for_contries_stats">
                               <a > Données géographiques </a>
                             </li>
                             <li onclick="showForUsers($(this));" id="btn_for_users_stats">
                               <a > Utilisateurs </a>
                             </li>
                             <li onclick="showStatsForBestTests($(this));" id="btn_for_best_tests_stats">
                               <a > Meilleurs tests (P > 25%) </a>
                             </li>
                             <li onclick="showStatsForSomeTests($(this));" id="btn_for_some_tests_stats" style="display:none;">
                               <a > Tests promus </a>
                             </li>
                         </ul>
                     </div>

                 </div>
         </div>

         <!-- Statistiques -->
         {% block content %}{% endblock %}


 </div>
</div>
<!-- /.container -->
<!-- jQuery -->
<script src="https://code.jquery.com/jquery-1.12.0.min.js"></script>
<!-- Bootstrap Core JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>
<script src="{{ base_url() }}/src/js/bootstrap.min.js"></script>
<script type="text/javascript" src="{{ base_url() }}/src/js/DateRangePicker/moment.js"></script>
<script type="text/javascript" src="{{ base_url() }}/src/js/DateRangePicker/daterangepicker.js"></script>
<script type="text/javascript" language="javascript" src="{{ base_url() }}/src/js/DataTables/jquery.dataTables.js"></script>
<script type="text/javascript" language="javascript" src="{{ base_url() }}/src/js/DataTables/dataTables.bootstrap.js"></script>
<script type="text/javascript" language="javascript" src="{{ base_url() }}/src/js/datepicker/bootstrap-datepicker.min.js"></script>
<!-- Custom JavaScript -->
<script type="text/javascript" language="javascript" src="{{ base_url() }}/src/js/dashboard.js?v=1.0297"></script>



<!-- Others scripts-->
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.1/Chart.min.js"></script>

</body>
</html>
