<html lang="fr">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">

    <title>{% block title %}{% endblock %} | Funizi</title>
    <!-- Bootstrap Core CSS -->
    <link href="{{ base_url() }}/src/css/bootstrap.css" rel="stylesheet" type="text/css">
    <link href="{{ base_url() }}/src/css/DataTables/jquery.dataTables.css" rel="stylesheet" type="text/css">
    <link href="{{ base_url() }}/src/css/DataTables/dataTables.bootstrap4.css" rel="stylesheet" type="text/css">
    <link href="{{ base_url() }}/src/css/datepicker/bootstrap-datepicker3.css" rel="stylesheet" type="text/css">
    <link href="{{ base_url() }}/src/css/fontawesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="{{ base_url() }}/src/css/select2.css?v=1.00006" rel="stylesheet" type="text/css"/>
    <link href="{{ base_url() }}/src/css/DateRangePicker/daterangepicker.css?v=1.0003" rel="stylesheet" type="text/css" media="all"  />
