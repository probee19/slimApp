{% extends 'templates/layout.twig' %}
{% block title %}{{interface_ui.title_discover_page | capitalize}}{% endblock %}
{% block googletagmanager %}
<script>
  dataLayer = [{
    'pageCategory': 'home'
  }];
</script>
{% endblock %}
{% block banner_mobile_top %}
    {% include 'banners/banner_320x100_top.twig' %}
{% endblock %}


{% block content %}

  <!-- /New Test Button -->
  {% set i = 0 %}
  <div class="row">
        {% for test in tests %}
                {% if is_mobile() or is_tablet() %}

                    <div class="col-md-6 portfolio-item">
                          <div class="border_gallery_responsive" data-test-id="{{test.id_test}}">
                              <img class="img-responsive" src="{{ storage_base }}/images{{ test.url_image_test |trim('.', 'left') }}" alt="image du test" style="">
                              <span class="mobile-layer"></span>
                            <a href="{{ domain_url }}/test/{{test.titre_test | twig_title_url(test.id_test, lang)}}/{{test.id_test}}" data-btn="btn-test" class="test__link page_discover_test"></a>
                          </div>
                          <div  class="test-title-gallery">
                            <a href="{{ domain_url }}/test/{{test.titre_test | twig_title_url(test.id_test, lang)}}/{{test.id_test}}" class="page_discover_test" ><span style="font-size:15px;">{{ test.titre_test }}</span></a>
                          </div>
                    </div>
                {% else %}
                  <div class="col-sm-6 col-md-4 portfolio-item-gallery">
                        <div class="border_gallery" >
                            <img class="img-responsive" src="{{ storage_base }}/images{{ test.url_image_test |trim('.', 'left') }}" alt="image du test" style="width: 100%; height: 100%; object-fit: cover; object-position: 0 30%;">
                            <span class="mobile-layer"></span>
                            <!-- <a href="{{ path_for('single', { 'id': test.id_test, 'name': test.titre_test | twig_clean_url }) }}" class="test__link" data-btn="btn-test"></a> -->
                            <a href="{{ domain_url }}/test/{{test.titre_test | twig_title_url(test.id_test, lang)}}/{{test.id_test}}" class="test__link page_discover_test" data-btn="btn-test"></a>

                        </div>
                        <div  class="test-title-gallery">
                          <a href="{{ domain_url }}/test/{{test.titre_test | twig_title_url(test.id_test, lang)}}/{{test.id_test}}" class="page_discover_test"><span style="font-size:14px;">{{ test.titre_test }}</span></a>
                        </div>
                  </div>
                {% set i = i+1 %}
                {% if i == 3 %}
                    <!--/div>
                    <div class="row"-->
                {% endif %}
            {% endif %}
        {% endfor %}
  </div>

  {% if is_mobile() or is_tablet()  %}
      <div class="" style="margin:-15px auto 10px">
          {% set banner = random(['banners/banner_360x300_responsive_bottom.twig', 'banners/banner_300x250_bottom.twig']) %}
          {% include  banner %}
      </div>
  {% endif %}
{% endblock %}
