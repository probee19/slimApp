            <div class="col-md-6 portfolio-item">
                  <div class="border_gallery_responsive" data-playbuzz-id="{{playbuzz.id_playbuzz}}">
                      <img class="img-responsive" src="{{ storage_base }}/images{{ playbuzz.url_image_playbuzz |trim('.', 'left') }}" alt="image du playbuzz" style="">
