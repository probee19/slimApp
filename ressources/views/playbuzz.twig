                  </div>
            </div>

        {% else %}
          <div class="col-sm-6 col-md-4 portfolio-item-gallery">
                <div class="border_gallery" >
                    <img class="img-responsive" src="{{ storage_base }}/images{{ playbuzz.url_image_playbuzz |trim('.', 'left') }}" alt="image du playbuzz" style="width: 100%; height: 100%; object-fit: cover; object-position: 0 30%;">
