{% extends 'templates/layout.twig' %}
{% block title %}{{interface_ui.title_home_citation | capitalize}}{% endblock %}
{% block googletagmanager %}
<script>
  dataLayer = [{
    'pageCategory': 'home'
  }];
</script>
{% endblock %}
{% block banner_mobile_top %}
    {% include 'banners/banner_320x100_top.twig' %}
{% endblock %}


{% block content %}

  <!-- /New Test Button -->
  <div class="col-lg-12">
          {{ flash.getMessage('invalid_test')[0] }}
  </div>
  {% if pagecount > 1 %}
      <div class="row text-center">
          <ul class="text-center pager" style="margin-bottom: 0; margin-top:15px;">
              {% if pageid == 1 %}
                  <li class="btn-next" style="margin-bottom: 20px">
                      <a href="{{ domain_url }}/page/{{ pageid + 1 }}" class="btn_to_track" data-btn="next">{{interface_ui.btn_next | capitalize}} <i class="fa fa-arrow-right"></i></a>
                  </li>
              {% elseif pageid == pagecount %}
                  <li class="btn-prev" style="margin-bottom: 20px">
                      <a href="{{ domain_url }}/page/{{ pageid - 1 }}" class="btn_to_track" data-btn="previous"><i class="fa fa-arrow-left"></i> {{interface_ui.btn_previous | capitalize}}</a>
                  </li>
                  <li style="margin-bottom: 20px">
                      <a href="{{ domain_url }}/page/{{ pageid + 1 }}" class="btn_to_track" data-btn="next">{{interface_ui.btn_next | capitalize}} <i class="fa fa-arrow-right"></i></a>
                  </li>
              {% else %}
                  <li class="btn-prev" style="margin-bottom: 20px">
                    <a href="{{ domain_url }}/page/{{ pageid - 1 }}" class="btn_to_track" data-btn="previous"><i class="fa fa-arrow-left"></i> {{interface_ui.btn_previous | capitalize}}</a>
                  </li>
                  <li style="margin-bottom: 20px">
                      <a href="{{ domain_url }}/page/{{ pageid + 1 }}" class="btn_to_track" data-btn="next">{{interface_ui.btn_next | capitalize}} <i class="fa fa-arrow-right"></i></a>
                  </li>
              {% endif %}
          </ul>
      </div>
  {% endif %}

  {% set i = 0 %}
  <div class="row">
  {% for citation in citations %}
      {% if is_mobile() or is_tablet() %}
          <div class="col-sm-6 col-md-6 portfolio-item">
              <div class="border" style="height:auto;">
                  <img class="img-responsive" src="{{ storage_base }}/images{{ citation.url_thumb_img_citation |trim('.', 'left') }}" alt="image de la citation" style="width:100%;">
                  <span class="mobile-layer"></span>
                  <!-- <a href="{{ path_for('single', { 'id': citation.id_citation, 'name': citation.titre_citation | twig_clean_url }) }}" class="citation__link" data-btn="btn-test"></a> -->
                  <a href="{{ domain_url }}/citation/{{citation.titre_citation | twig_title_url(citation.id_citation, lang)}}/{{citation.id_citation}}" class="test__link" data-btn="btn-test"></a>
                  <div class="col-sm-12 col-sm-offset-0 col-xs-12 col-xs-offset-0 text-center" style="margin-bottom: 0.3em;position:  absolute;bottom: 0;left: 0; z-index:99">
                        <a class="btn btn-xs btn_to_track btn_share_quote" href="https://www.facebook.com/dialog/share?app_id={{ fb_app_id }}&hashtag=%23funizi&display=popup&href={{ citation.url_to_share }}&redirect_uri={{ citation.url_to_share }}" onclick='partage("{{ citation.id_citation }}", "{{ lang }}", "share_citation")' style="cursor:pointer;"  data-btn="share-bottom"><i class="fab fa-facebook-square"></i> {{interface_ui.btn_share}}</a>
                        {% if is_mobile() or is_tablet() %}
                            <a href="fb-messenger://share/?link={{ citation.url_to_share_msg }}&app_id={{ fb_app_id }}" class="btn btn-xs btn_to_track btn_share_quote" style="background-color:#0084ff;" onclick='partage("{{ citation.id_citation }}", "{{ lang }}", "share_citation_messenger")'><i class="fab fa-facebook-messenger"></i></a>
                            <a href="whatsapp://send?text=Viens voir mon résultat en cliquant ici : {{ citation.url_to_share_wtsp }}" class="btn btn-xs btn_to_track btn_share_quote" style="background-color:#25d366;" onclick='partage("{{ citation.id_citation }}", "{{ lang }}", "share_citation_whatsapp")'><i class="fab fa-whatsapp"></i></a>
                        {% else %}
                          <a href="https://www.facebook.com/dialog/send?app_id={{ fb_app_id }}&amp;link={{ citation.url_to_share_msg }}&amp;redirect_uri={{ citation.url_redirect_share }}" class="btn btn-xs btn_to_track btn_share_quote" style="background-color:#0084ff;" onclick='partage("{{ citation.id_citation }}", "{{ lang }}", "share_citation_messenger")'><i class="fab fa-facebook-messenger"></i></a>
                        {% endif %}
                  </div>
              </div>
          </div>


      {% else %}
          <div class="col-sm-6 col-md-6 portfolio-item-gallery">
                <div class="border_gallery" style="height:auto">
                    <img class="img-responsive" src="{{ storage_base }}/images{{ citation.url_thumb_img_citation |trim('.', 'left') }}" alt="image de la citation" style="width: 100%; height: 100%; object-fit: cover; object-position: 0 30%;">
                    <span class="mobile-layer"></span>
                    <!-- <a href="{{ path_for('single', { 'id': citation.id_citation, 'name': citation.titre_citation | twig_clean_url }) }}" class="test__link" data-btn="btn-test"></a> -->
                    <a href="{{ domain_url }}/citation/{{citation.titre_citation | twig_title_url(citation.id_citation, lang)}}/{{citation.id_citation}}" class="test__link" data-btn="btn-test"></a>
                    <div class="col-sm-12 col-sm-offset-0 col-xs-12 col-xs-offset-0 text-center" style="margin-bottom: 0.3em;position:  absolute;bottom: 0;left: 0; z-index:99;">
                          <a class="btn btn-xs btn_to_track btn_share_quote" href="https://www.facebook.com/dialog/share?app_id={{ fb_app_id }}&hashtag=%23funizi&display=popup&href={{ citation.url_to_share }}&redirect_uri={{ citation.url_to_share }}" onclick='partage("{{ citation.id_citation }}", "{{ lang }}", "share_citation")' style="cursor:pointer;"  data-btn="share-bottom"><i class="fab fa-facebook-square"></i> {{interface_ui.btn_share}}</a>
                          {% if is_mobile() or is_tablet() %}
                              <a href="fb-messenger://share/?link={{ citation.url_to_share_msg }}&app_id={{ fb_app_id }}" class="btn btn-xs btn_to_track btn_share_quote" style="background-color:#0084ff;" onclick='partage("{{ citation.id_citation }}", "{{ lang }}", "share_citation_messenger")'><i class="fab fa-facebook-messenger"></i></a>
                              <a href="whatsapp://send?text=Viens voir mon résultat en cliquant ici : {{ citation.url_to_share_wtsp }}" class="btn btn-xs btn_to_track btn_share_quote" style="background-color:#25d366;" onclick='partage("{{ citation.id_citation }}", "{{ lang }}", "share_citation_whatsapp")'><i class="fab fa-whatsapp"></i></a>
                          {% else %}
                            <a href="https://www.facebook.com/dialog/send?app_id={{ fb_app_id }}&amp;link={{ citation.url_to_share_msg }}&amp;redirect_uri={{ citation.url_redirect_share }}" class="btn btn-xs btn_to_track btn_share_quote" style="background-color:#0084ff;" onclick='partage("{{ citation.id_citation }}", "{{ lang }}", "share_citation_messenger")'><i class="fab fa-facebook-messenger"></i></a>
                          {% endif %}
                    </div>
                </div>
                <!--div  class="test-title-gallery">
                  <span style="font-size:14px;">{{ citation.titre_citation }}</span>
                </div-->
          </div>
      {% endif %}

      {% if i == 2 or i == 8 or i == 11 %}
            <div class="col-sm-6 col-md-6 portfolio-item">
                  <div class="border_gallery_responsive" >
                      <img class="img-responsive" src="{{ storage_base }}/images{{ tests[0].url_image_test |trim('.', 'left') }}" alt="image du test" style="">
                      <span class="mobile-layer"></span>
                      <!-- <a href="{{ path_for('single', { 'id': tests[0].id_test, 'name': tests[0].titre_test | twig_clean_url }) }}" class="test__link" data-btn="btn-test"></a> -->
                    <a href="{{ domain_url }}/test/{{tests[0].titre_test | twig_title_url(tests[0].id_test, lang)}}/{{tests[0].id_test}}" data-btn="btn-test" class="test__link"></a>

                  </div>
                  <div  class="test-title-gallery">
                    <a href="{{ domain_url }}/test/{{tests[0].titre_test | twig_title_url(tests[0].id_test, lang)}}/{{tests[0].id_test}}" class="" ><span style="font-size:14px;">{{ tests[0].titre_test }}</span></a>
                  </div>
            </div>

      {% endif %}

    {% if i == 5 and (is_mobile() or is_tablet()) %}
          <div class="" style="margin:10px auto 10px;">
              {% set banner = random(['banners/banner_360x300_responsive_bottom.twig', 'banners/banner_300x250_bottom.twig']) %}
              {% include  banner %}
          </div>
    {% endif %}

      {% set i = i+1 %}
  {% endfor %}
  </div>

  {% if pagecount > 1 %}
      <div class="text-center">
          <ul class="text-center pager" style="margin-top:15px;">
              {% if pageid == 1 %}
                  <li class="btn-next">
                      <a href="{{ domain_url }}/citations/page/{{ pageid + 1 }}"  class="btn_to_track" data-btn="next">{{interface_ui.btn_next | capitalize}} <i class="fa fa-arrow-right"></i></a>
                  </li>
              {% elseif pageid == pagecount %}
                  <li class="btn-prev">
                      <a href="{{ domain_url }}/citations/page/{{ pageid - 1 }}"  class="btn_to_track" data-btn="previous"><i class="fa fa-arrow-left"></i> {{interface_ui.btn_previous | capitalize}}</a>
                  </li>
                  <li>
                      <a href="{{ domain_url }}/citations/page/{{ pageid + 1 }}"  class="btn_to_track" data-btn="next">{{interface_ui.btn_next | capitalize}} <i class="fa fa-arrow-right"></i></a>
                  </li>
              {% else %}
                  <li class="btn-prev">
                      <a href="{{ domain_url }}/citations/page/{{ pageid - 1 }}"  class="btn_to_track" data-btn="previous"><i class="fa fa-arrow-left"></i> {{interface_ui.btn_previous | capitalize}}</a>
                  </li>
                  <li>
                      <a href="{{ domain_url }}/citations/page/{{ pageid + 1 }}"  class="btn_to_track" data-btn="next">{{interface_ui.btn_next | capitalize}} <i class="fa fa-arrow-right"></i></a>
                  </li>
              {% endif %}
          </ul>
      </div>
  {% endif %}

  {% if is_mobile() or is_tablet()  %}
      <div class="" style="margin:10px auto 10px">
          {% set banner = random(['banners/banner_360x300_responsive_bottom.twig', 'banners/banner_300x250_bottom.twig']) %}
          {% include  banner %}
      </div>
  {% endif %}
{% endblock %}
